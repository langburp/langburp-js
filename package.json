{
  "name": "langburp-js",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "codegen": "turbo run codegen",
    "publish-packages": "turbo run codegen build && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.12",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}